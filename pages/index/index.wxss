  flex-direction: row;
  align-items:center;
  position: relative;
}
.inputSer .inputsum{
  flex: 1;
    height: 52rpx;
}
.inputSer .inputsum input{
    padding-left: 40rpx;
    font-size: 28rpx;
}
.inputSer .magnifier{
    width: 120rpx;
    height: 52rpx;
    border-left: 2rpx solid #00b65f;
}

.inputSer .magnifier image{
    width: 52rpx;
    height: 52rpx;
    margin-left: 30rpx;
}
.inputSer .sanjiao{
  width: 65rpx;
  height: 100%;
}
.inputSer .sanjiao image{
  width: 28rpx;
  height: 16rpx;
  float: right;
  margin-top: 32rpx;
}
.inputSer .listTitle{
  width: 150rpx;
  background: #eeeeee;
  position: absolute;
  top: 65rpx;
  left: 30rpx;
}
.inputSer .listTitle .listP{
  text-align: center;
  line-height: 50rpx;
  border-bottom: 1px solid #dcdcdc;
  font-size: 24rpx;
}
.actions{
  color: #00b65f;
}
.btmText{
  width: 100%;
  text-align: center;
