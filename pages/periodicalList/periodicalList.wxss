/* pages/periodicalList/periodicalList.wxss */
page{
  background: #edf2f5;
}
.container{
  width: 100%;
}
.numberNo{
  width: 100%;
  text-align: center;
}
.numberNo image{
  width: 62rpx;
  height: 62rpx;
  margin-top: 95rpx;
  margin-bottom: 23rpx;
}
.numberNo .textBox{
  width: 100%;
  color: #434446;
  font-size: 22rpx;
  text-align: center;
  
}
.screen{
  width: 100%;
  height: 57rpx;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  z-index: 20;
}
.screen .textIcon{
  width: 130rpx;
}
.screen .textIcon text{
  font-size: 28rpx;
  line-height: 55rpx;
}
.screen .textIcon image{
  width: 22rpx;
  height: 22rpx;
  margin-top: 16rpx;
  margin-left: 10rpx;

}

.perList{
  width: 100%;
  margin-top: 69rpx;
}
.perList .listLi{
  width: 90%;
 margin:12rpx auto;
background: #fff;
border-radius: 20rpx;
padding: 25rpx 20rpx 25rpx;
display: flex;
flex-direction: row;

}
.perList .fengpi{
   width: 140rpx;
  height: 180rpx;
    margin-right: 22rpx;
}
.perList .fengpi image{
  width: 140rpx;
  height: 100%;

}


.perList .textMs{ 
  flex: 1;
  width:400rpx;

}
.perList .textMs image{
  width: 12rpx;
  height: 12rpx;
  margin-right: 11rpx;
}
.perList .textMs .pClass{
  width: 100%;
   display: flex;
  align-items:center;
}
.perList .textMs .pClass text{
  display: block;
  width: 100%;
  overflow: hidden; /*超过长度自动隐藏*/
text-overflow: ellipsis;/*添加省略号*/
white-space:nowrap;/*不换行*/
  color: #3e3e3e;
  font-size: 22rpx;
}
.perList .textMs .pClass2{
  width: 100%;
   display: flex;
  align-items:center;
}
.perList .textMs .pClass2 text{
  color: #7b7b7b;
  font-size: 22rpx;
}
.perList .textMs .pClass1{
  width: 100%;
  display: flex;
  align-items:center;
}
.perList .textMs .pClass1 text{
  color: #7b7b7b;
  font-size: 22rpx;
}
.perList .textMs .pClass1 p{
  height: 30rpx;
  color: #fff;
  padding: 0 10rpx;
  background: #00b664;
  border-radius: 30rpx;
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  position: relative;
}
.perList .textMs .pClass1 p span{
  position: absolute;
  top:-5rpx;
right:-67rpx;
  color: red;
  font-size: 18rpx;
}


.mask{
    width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: .5;
  overflow: hidden;
  z-index: 10;
}
.popup{
  width: 700rpx;
  height: 100%;
  position: fixed;
  top: 0;
  right: -800rpx;
  background: #fff;
  z-index: 20;
}
.seleSum{
  width: 100%;
  height: 100%;
  padding: 30rpx 30rpx 0 10rpx;
  box-sizing: border-box;
}
.seleBox{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}
.seleBox .select{
 width: 110rpx;
 height: 60rpx;
 text-align: center;
 line-height: 60rpx;
 font-size: 20rpx;
 background: #eeeeee;
 color: #323232;
 margin-bottom: 17rpx;
 margin-left: 30rpx;
 border-radius: 5rpx;
}
.seleBox .selectWidth{
  width: 135rpx;
}
.selectShu{
 text-align: center;
 line-height: 60rpx;
 font-size: 20rpx;
 background: #eeeeee;
 color: #323232;
 margin-bottom: 17rpx;
 margin-left: 30rpx;
 border-radius: 5rpx;
 padding: 0 15rpx;
}

.selectShu:first-child{
   width: 110rpx;
   padding: 0;
}
.seleBox .activeEle{
  background: #00b65f;
 color: #fff;
}
.textTit{
  width: 100%;
  font-size: 24rpx;
  color: #323232;
  margin:13rpx 0 18rpx 30rpx;
}
.seleSum text{
  font-size: 24rpx;
  color: #e56356;
  float: right;
}
.btnChongzhi{
  width: 100%;
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: row;
}
.btnChongzhi .chongzhi{
  flex: 1;
  background: #eeeeee;
  font-size: 32rpx;
  color: #3d3d3d;
  line-height: 98rpx;
  text-align: center;
}
.btnChongzhi .quedings{
  flex: 1;
  background: #d81e07;
  font-size: 32rpx;
  color: #fff;
  line-height: 98rpx;
  text-align: center;
}
