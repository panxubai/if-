/* pages/move/move.wxss */
.container{
  width: 100%;
}
.moveBox{
  width: 90%;
  margin: 0 auto;
  padding-bottom:100rpx; 
}

.moveList{
margin-bottom: 50rpx;
width: 100%;
display: flex;
flex-direction: row;
}
.moveTop{
  border-bottom: 1px solid #e5e5e5;
  margin-bottom:30rpx;
  padding-bottom: 30rpx;
  padding-top: 35rpx;
}
.moveList .moveImg{
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}
.moveList .moveImg image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
} 
.moveList .moveName{
  flex: 1;
}
.moveList .moveName .names{
    margin-top: 10rpx;
    width: 100%;
}
.moveList .moveName .names text{
  font-size: 26rpx;
  color: #424242;
  margin-right: 15rpx;
}
.moveList .moveName .names p{
  font-size: 22rpx;
  line-height: 26rpx;
  color: #b7b7b7;
}
.moveList .moveName .time{
    font-size: 20rpx;
    color: #b7b7b7;
    margin-bottom: 15rpx;
}
.moveList .moveName .content{
    font-size: 26rpx;
  color: #424242;
}
.moveList .zan{
  width: 60rpx;
  height: 25rpx;
}
.moveList .zan image{
  width: 25rpx;
  height: 25rpx;
  margin-right: 10rpx;

}
.moveList .zan text{
     font-size: 20rpx;
    color: #b7b7b7;
}


.commirIpt{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.commirIpt button{
  width: 90%;
  height: 80rpx;
  margin-top: 10rpx;
}

.commirIpt .ipts{
  width: 90%;
  margin: 10rpx auto;
  display: flex;
}
.commirIpt .ipts input{
  width: 80%;
  height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  background: #edf2f5;
  border-radius: 40rpx;
  border:1px solid #dbd8d8;
}
.commirIpt .ipts p{
  padding: 0 20rpx;
  height: 80%;
  background: #00b65f;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
   border-radius: 20rpx;
   margin-left: 10rpx;
}


.numberNo{
  width: 100%;
  text-align: center;
}
.numberNo image{
  width: 62rpx;
  height: 62rpx;
  margin-top: 95rpx;
  margin-bottom: 23rpx;
}
.numberNo .textBox{
  width: 100%;
  color: #434446;
  font-size: 22rpx;
  text-align: center;
  
}