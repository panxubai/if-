  background: #00b65f;
  border-radius: 10rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 40rpx;
  margin-top: 18rpx;
  margin-left: 185rpx;
}

.straight{
  width: 100%;
  height: 1px;
  background: #616264;
  margin-top: 50rpx;
  position: relative;
}
.straight .cover{
  width: 160rpx;
  font-size: 22rpx;
  background: #edf2f5;
  text-align: center;
  position: absolute;
  left: 260rpx;
  top: -15rpx;
}