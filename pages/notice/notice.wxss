/* pages/notice/notice.wxss */
page{
  background: #edf2f5;
}
.container{
  width: 100%;
  padding-bottom: 50rpx;
}
.numberNo{
  width: 100%;
  text-align: center;
}
.numberNo image{
  width: 62rpx;
  height: 62rpx;
  margin-top: 95rpx;
  margin-bottom: 23rpx;
}
.numberNo .textBox{
  width: 100%;
  color: #434446;
  font-size: 22rpx;
  text-align: center;
  
}
.noticeList{
  width: 100%;
  margin-top: 10rpx;
}
.noticeList .list{
width: 90%;
padding: 25rpx 20rpx;
box-sizing: border-box;
background: #fff;
margin: 10rpx auto;
border-radius: 10rpx;
}
.noticeList .list .title{
  width: 100%;
  font-size: 26rpx;
  color: #3d3d3d;
}
.noticeList .list text{
  font-size: 20rpx;
  color: #797979;
}

.straight{
  width: 90%;
  height: 1px;
  background: #616264;
  margin: 50rpx auto 0;
  position: relative;
}
.straight .cover{
  width: 160rpx;
  font-size: 22rpx;
  background: #edf2f5;
  text-align: center;
  position: absolute;
  left: 260rpx;
  top: -15rpx;
}